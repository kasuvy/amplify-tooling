{
	"extends": [ "axway/env-node", "axway/+babel", "axway/+chai", "axway/+mocha" ],
	"globals": {
		"after": false,
		"afterEach": false,
		"before": false,
		"beforeEach": false,
		"console": false,
		"describe": false,
		"expect": false,
		"it": false,
		"spy": false,
		"stub": false,
		"sinon": false
	},
	"rules": {
		"node/no-unsupported-features/es-syntax": "off",
		"promise/always-return": "off",
		"require-atomic-updates": "off"
	}
}
